---
import { Party } from "../../components/Party";
import Layout from "../../layouts/Layout.astro";
import Modal from "../../components/Modal.astro";

const usernameParams = Astro.url.searchParams.get("username");
const username =
  usernameParams === null || usernameParams === ""
    ? "anonymous"
    : usernameParams;

const roomIdParams = Astro.url.searchParams.get("roomId");
const roomId =
  roomIdParams === null || roomIdParams === ""
    ? "astro-partykit-room"
    : roomIdParams;
---

<Layout title="Welcome to Astro.">
  <main>
    <div class="grid place-content-center">
      <h1 class="text-center">Astro ğŸš€ ğŸ¤ Partykit ğŸˆ</h1>
      <Party username={username} roomId={roomId} client:load />

      <button
        id="leave-room-btn"
        class="bg-red-500 hover:bg-red-700 w-36 mx-auto text-white font-bold py-2 px-4 rounded"
        >Leave room</button
      >
      <Modal username={username} roomId={roomId} />
    </div>
  </main>
</Layout>
